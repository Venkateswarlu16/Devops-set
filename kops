# INSTALL KUBECTL AND KOPS

curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
wget https://github.com/kubernetes/kops/releases/download/v1.25.0/kops-linux-amd64

chmod +x kops-linux-amd64 kubectl
mv kubectl /usr/local/bin/kubectl
mv kops-linux-amd64 /usr/local/bin/kops

#CREATING BUCKET 

aws s3api create-bucket --bucket venkat12345kops.k8s.local --region us-east-1
aws s3api put-bucket-versioning --bucket venkat12345kops.k8s.local --region us-east-1 --versioning-configuration Status=Enabled

export KOPS_STATE_STORE=s3://venkat12345kops.k8s.local

#CREATING THE CLUSTER
kops create cluster --name venkat.k8s.local --zones us-east-1a --master-image ami-0360c520857e3138f  --master-count=1 --master-size c7i-flex.large --image ami-0360c520857e3138f  --node-count=2 --node-size t3.micro

kops update cluster --name venkat.k8s.local --yes --admin

kops validate cluster --wait 10m

#TO DELETE
kops delete cluster --name venkat.k8s.local --yes
